<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.zeno-cdf.org/core/v0" elementFormDefault="qualified">
  <xs:include schemaLocation="common.xsd"/>

  <xs:complexType name="metadata">
    <xs:sequence>
      <xs:element name="objects">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="object" type="object" minOccurs="0"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
