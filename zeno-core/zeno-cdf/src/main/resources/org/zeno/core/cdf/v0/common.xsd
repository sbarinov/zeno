<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.zeno-cdf.org/core/v0" elementFormDefault="qualified">
  <xs:element name="resource" type="resource"/>

  <xs:complexType name="resource">
    <xs:complexContent>
      <xs:extension base="metaObject"/>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="metaObject">
    <xs:attribute name="name" type="xs:string" use="required"/>
    <xs:attribute name="type" type="xs:string" use="required"/>
    <xs:attribute name="version" type="numericIdentifier" default="0"/>
  </xs:complexType>

  <xs:simpleType name="phase">
    <xs:restriction base="xs:string">
      <xs:enumeration value="BEFORE"/>
      <xs:enumeration value="AFTER"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="numericIdentifier">
    <xs:restriction base="xs:long">
      <xs:minInclusive value="0"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>